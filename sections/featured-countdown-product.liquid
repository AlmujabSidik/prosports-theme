{{ 'css-section-countdown-product.css' | asset_url | stylesheet_tag }}
{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign collection_handle = section.settings.featured_products -%}
{%- assign nav = section.settings.navigation -%}
{%- assign dot = section.settings.dots -%}
{%- assign infinite = section.settings.infinite -%}
{%- assign autoplay = section.settings.autoplay -%}
{%- assign autoplay_speed = section.settings.autoplay_speed | escape -%}
{%- assign columns = section.settings.columns -%}
{%- assign column1440 = section.settings.column1440 -%}
{%- assign column1 = section.settings.column1 -%}
{%- assign column2 = section.settings.column2 -%}
{%- assign column3 = section.settings.column3 -%}
{%- assign column4 = section.settings.column4 -%}
{%- assign limit = section.settings.limit | plus: 0 -%}
{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{% assign padding_bg 	= section.settings.padding_bg | split: "|" %}

{%- style -%}
	{%- if section.settings.color_bg != blank -%}
		#shopify-section-{{ section.id }} .content-info-countdown{
			background:{{ section.settings.color_bg }};
		}
	{%- endif -%}
	#shopify-section-{{ section.id }} .content-info-countdown{
		justify-content:{{ section.settings.align }};
	}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .bwp-widget-countdown-product{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
		#shopify-section-{{ section.id }} .content-info-countdown{
			{%- if padding_bg[0] != blank -%}padding:{{ padding_bg[0] }};{%- endif -%}
		}
	{%- endif -%}
	@media (max-width:1200px){
		{%- if margin[1] != blank or padding[1] != blank -%}
			#shopify-section-{{ section.id }} .bwp-widget-countdown-product{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		{%- endif -%}
		#shopify-section-{{ section.id }} .content-info-countdown{
			{%- if padding_bg[1] != blank -%}padding:{{ padding_bg[1] }};{%- endif -%}
		}
	}
	@media (max-width:991px){
		{%- if margin[2] != blank or padding[2] != blank -%}
			#shopify-section-{{ section.id }} .bwp-widget-countdown-product{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		{%- endif -%}
		#shopify-section-{{ section.id }} .content-info-countdown{
			{%- if padding_bg[2] != blank -%}padding:{{ padding_bg[2] }};{%- endif -%}
		}
	}
	@media (max-width:767px){
		{%- if margin[3] != blank or padding[3] != blank -%}
			#shopify-section-{{ section.id }} .bwp-widget-countdown-product{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		{%- endif -%}
		#shopify-section-{{ section.id }} .content-info-countdown{
			{%- if padding_bg[3] != blank -%}padding:{{ padding_bg[3] }};{%- endif -%}
		}
		#shopify-section-{{ section.id }} .content-info-countdown{
			justify-content:{{ section.settings.align_mobi }};
		}
	}
	{%- for block in section.blocks -%}
		{%- case block.type -%}
			{%- when 'title' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .heading-{{forloop.index}}{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					margin:{{ block.settings.margin }};
					color:{{ block.settings.color }};
					text-align:{{ block.settings.align }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
			{%- when 'button' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}}{
					margin:{{ block.settings.margin }};
					text-align:{{ block.settings.align }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					color:{{ block.settings.color }};
					background:{{ block.settings.background }};
					padding:{{ block.settings.padding }};
					overflow:hidden;
					border-radius:{{ block.settings.border_radius }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
				{%- if block.settings.border -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a{
						border-width:{{ block.settings.border_width }};
						border-color:{{ block.settings.border_color }};
						border-style:solid;
					}
				{%- endif -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a:hover{
					color:{{ block.settings.color_hover }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a:before{
					background:{{ block.settings.background_hover }};
				}
				{%- if block.settings.border -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a:hover{
						border-color:{{ block.settings.border_color_hover }};
					}
				{%- endif -%}
				{%- unless block.settings.icon_title == blank -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a i{
						font-size:{{ block.settings.font_icon }}px;
						top:{{ block.settings.margin_icon }}px;
						position:relative;
					}
				{%- endunless -%}
			{%- when 'countdown' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .content-countdown{
					text-align:{{ block.settings.align }};
					margin:{{ block.settings.margin }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .countdown-deal .countdown__item > span:first-child{
					font-size:{{ block.settings.font_countdown_amount }}px;
					font-weight:{{ block.settings.font_weight }};
					color:{{ block.settings.color_countdown_amount }};
					{%- if block.settings.font_amount != blank -%}
						font-family:{{ block.settings.font_amount }};
					{%- endif -%}
					width:{{ block.settings.width_countdown }};
					height:{{ block.settings.height_countdown }};
					line-height:{{ block.settings.height_countdown }};
					border-radius:{{ block.settings.border_radius_countdown }};
					background:{{ block.settings.background }};
					display: inline-block;
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown-product .countdown-deal .countdown__item > span:last-child{
					font-size:{{ block.settings.font_countdown_text }}px;
					color:{{ block.settings.color_countdown_text }};
					margin:{{ block.settings.margin_text }};
					display: block;
				}
		{%- endcase -%}
	{%- endfor -%}
	@media (max-width:767px){
		{%- for block in section.blocks -%}
			{%- case block.type -%}
				{%- when 'title' -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .heading-{{forloop.index}}{
						font-size:{{ block.settings.font_size_mobi }}px;
						line-height:{{ block.settings.line_height_mobi }}px;
						letter-spacing:{{ block.settings.letter_spacing_mobi }}px;
						margin:{{ block.settings.margin_mobi }};
						color:{{ block.settings.color_mobi }};
						text-align:{{ block.settings.align_mobi }};
					}
				{%- when 'button' -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}}{
						margin:{{ block.settings.margin_mobi }};
						text-align:{{ block.settings.align_mobi }};
					}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a{
						font-size:{{ block.settings.font_size_mobi }}px;
						line-height:{{ block.settings.line_height_mobi }}px;
						letter-spacing:{{ block.settings.letter_spacing_mobi }}px;
						padding:{{ block.settings.padding_mobi }};
						color:{{ block.settings.color_mobi }};
						background:{{ block.settings.background_mobi }};
						border-radius:{{ block.settings.border_radius_mobi }};
					}
					{%- if block.settings.border_mobi -%}
						#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a{
							border-width:{{ block.settings.border_width_mobi }};
							border-color:{{ block.settings.border_color_mobi }};
							border-style:solid;
						}
					{%- endif -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a:hover{
						color:{{ block.settings.color_hover_mobi }};
					}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a:before{
						background:{{ block.settings.background_hover_mobi }};
					}
					{%- if block.settings.border -%}
						#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a:hover{
							border-color:{{ block.settings.border_color_hover_mobi }};
						}
					{%- endif -%}
					{%- unless block.settings.icon_title == blank -%}
						#shopify-section-{{ section.id }} .bwp-widget-countdown-product .button-{{forloop.index}} a i{
							font-size:{{ block.settings.font_icon_mobi }}px;
							top:{{ block.settings.margin_icon_mobi }}px;
						}
					{%- endunless -%}
				{%- when 'countdown' -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .content-countdown{
						text-align:{{ block.settings.align_mobi }};
						margin:{{ block.settings.margin_mobi }};
					}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .countdown-deal .countdown__item > span:first-child{
						width:{{ block.settings.width_countdown_mobi }};
						height:{{ block.settings.height_countdown_mobi }};
						line-height:{{ block.settings.height_countdown_mobi }};
						font-size:{{ block.settings.font_countdown_amount_mobi }}px;
						display: inline-block;
					}
					#shopify-section-{{ section.id }} .bwp-widget-countdown-product .countdown-deal .countdown__item > span:last-child{
						font-size:{{ block.settings.font_countdown_text_mobi }}px;
						display: block;
					}
			{%- endcase -%}
		{%- endfor -%}
	}
{%- endstyle -%}

<section class="wpbingo-section bwp-widget-countdown-product wpbingo-section--{{ section.id }} overflow-hidden" {{ bg_full }}>
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner" {{ bg_content }}>
			<div class="wpbingo-section__content">
				<div class="content-left">
					<div class="content-info-countdown">
						<div class="info">
							{%- for block in section.blocks -%}
								{%- case block.type -%}
									{%- when 'title' -%}
										{%- unless block.settings.title == blank -%}
											<div class="content-info content-title-{{forloop.index}}">
												<h2 class="wpbingo-title heading-{{forloop.index}}">
													{{ block.settings.title }}
												</h2>
											</div>
										{%- endunless -%}
									{%- when 'button' -%}
										{%- unless block.settings.title == blank -%}
											<div class="content-info content-button-{{forloop.index}}">
												<div class="wpbingo-button button-{{forloop.index}}" >
													<a class="bwp-button" href="{{ block.settings.button_link }}">
														{{ block.settings.title }}
														{%- unless block.settings.icon_title == blank -%}
															<i class="{{ block.settings.icon_title }}"></i>
														{%- endunless -%}
													</a>
												</div>
											</div>
										{%- endunless -%}
									{%- when 'countdown' -%}
										{%- assign final_date 	= block.settings.final_date | escape -%}
										<div class="countdown-deal">
											<div class="content-countdown">
												<div class="countdown" data-countdown="{{ block.settings.final_date }}" data-day="{{ block.settings.countdown_day }}" data-hour="{{ block.settings.countdown_hour }}" data-min="{{ block.settings.countdown_min }}" data-sec="{{ block.settings.countdown_sec }}"></div>
											</div>
										</div>
								{%- endcase -%}
							{%- endfor -%}
						</div>
					</div>
				</div>
				<div class="content-right bwp_slider-carousel{% if section.settings.half_slider != blank %} bwp_slick-margin-mobile{% endif %}">
					{%- if collection_handle == blank or collections[collection_handle] == empty or collections[collection_handle].products_count == 0 -%}
						<div class="row">
							{% include 'onboarding-featured-products' %}
						</div>
					{%- else -%}
						<div class="js-carousel slick-carousel" data-nav="{{ nav }}" data-dots="{{ dot }}" data-slidesToScroll="true" data-infinite="{{ infinite }}" data-autoplay="{{ autoplay }}"
							data-autoplayspeed="{{ autoplay_speed }}"
							data-columns="{{ columns }}"
							data-column1440="{{ column1440 }}"
							data-column1="{{ column1 }}"
							data-column2="{{ column2 }}"
							data-column3="{{ column3 }}"
							data-column4="{{ column4 }}">
							{%- for product in collections[collection_handle].products limit: limit -%}
								<div class="slick-carousel__item">
									{% include 'product-grid-item' %}
								</div>
							{%- endfor -%}
						</div>
					{%- endif -%}
				</div>
			</div>
		</div>
	</div>
</section>

