{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign margin = '' -%}
{%- if section.settings.margin != blank -%}
  {%- capture margin -%}margin: {{ section.settings.margin }};{%- endcapture -%}
{%- endif -%}

{% assign margin 			= section.settings.margin | split: "|" %}
{% assign padding 			= section.settings.padding | split: "|" %}
{%- style -%}
	#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
		background:{{ section.settings.color }};
	}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if section.blocks.size > 0 -%}
		{%- for block in section.blocks -%}
			{%- if block.type == 'css' -%}
				#shopify-section-{{ section.id }} .two-lookbook .info{
					text-align:{{ block.settings.text_align }};
                    margin:{{ block.settings.margin }};
				}
				#shopify-section-{{ section.id }} .two-lookbook .title-lookbook{
					font-size: {{ block.settings.font_size_title }}px;
					line-height: {{ block.settings.line_height_title }}px;
					font-weight: {{ block.settings.font_weight_title }};
					color:{{ block.settings.color_title }};
					margin:{{ block.settings.margin_title }};
				}
				#shopify-section-{{ section.id }} .two-lookbook .desc-lookbook{
					font-size: {{ block.settings.font_size_desc }}px;
					line-height: {{ block.settings.line_height_desc }}px;
					font-weight: {{ block.settings.font_weight_desc }};
					color:{{ block.settings.color_desc }};
					margin:{{ block.settings.margin_desc }};
				}
				#shopify-section-{{ section.id }} .two-lookbook .button-lookbook{
					font-size: {{ block.settings.font_size_button }}px;
					line-height: {{ block.settings.line_height_button }}px;
					color:{{ block.settings.color_button }};
					padding:{{ block.settings.padding_button }};
					font-weight: {{ block.settings.font_weight_button }};
					letter-spacing:{{ block.settings.letter_spacing_button }}px;
					border-radius:{{ block.settings.border_radius }};
					background:{{ block.settings.bg_button }};
					overflow:hidden;
					{%- if block.settings.border -%}
						border:{{ block.settings.border_width }}px solid {{ block.settings.border_color_button }};
					{%- endif -%}
				}
				#shopify-section-{{ section.id }} .two-lookbook .button-lookbook:before{
					background:{{ block.settings.bg_button }};
				}
				#shopify-section-{{ section.id }} .two-lookbook .button-lookbook:hover{
					color:{{ block.settings.color_hover_button }};
					border-color:{{ block.settings.border_color_hover_button }};
				}
				#shopify-section-{{ section.id }} .two-lookbook .button-lookbook:hover:before{
					background:{{ block.settings.bg_hover_button }};
				}
                @media(max-width:1200px){
                    #shopify-section-{{ section.id }} .two-lookbook .info{
                        margin:{{ block.settings.margin_tablet }};
                    }
					#shopify-section-{{ section.id }} .two-lookbook .title-lookbook{
						font-size: {{ block.settings.font_size_title_tablet }}px;
						line-height: {{ block.settings.line_height_title_tablet }}px;
					}
                }
				@media(max-width:767px){
                    #shopify-section-{{ section.id }} .two-lookbook .info{
                        margin:{{ block.settings.margin_mobi }};
                    }
					#shopify-section-{{ section.id }} .two-lookbook .title-lookbook{
						font-size: {{ block.settings.font_size_title_mobi }}px;
						line-height: {{ block.settings.line_height_title_mobi }}px;
					}
					#shopify-section-{{ section.id }} .two-lookbook .desc-lookbook{
						font-size: {{ block.settings.font_size_desc_mobi }}px;
						line-height: {{ block.settings.line_height_desc_mobi }}px;
					}
					#shopify-section-{{ section.id }} .two-lookbook .button-lookbook{
						font-size: {{ block.settings.font_size_button_mobi }}px;
						line-height: {{ block.settings.line_height_button_mobi }}px;
						padding:{{ block.settings.padding_button_mobi }};
						border-radius:{{ block.settings.border_radius_mobi }};
						{%- if block.settings.border -%}
							border-width:{{ block.settings.border_width }}px;
						{%- endif -%}
					}
				}
			{%- endif -%}
		{%- endfor -%}
	{%- endif -%}
{%- endstyle -%}
<section class="wpbingo-section wpbingo-section--lookbook two-lookbook wpbingo-section--{{ section.id }}" data-id="{{ section.id }}">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			<div class="wpbingo-lookbook__contents">
				<div class="lookbook__contents-left">
					{%- assign id = 0 -%}
					{%- assign j = 1 -%}
					<div class="wpbingo-lookbook__item">
						<div class="lookbook-card">
							<div class="lookbook-image">
								{%- if section.settings.image1 != blank -%}
									{% include 'img-global' with image: section.settings.image1, class: "featured-lookbook__img", effect: "fade-in" %}
								{%- else -%}
									<img class="lazyload fade-in" src="https://placehold.jp/960x798.png" width="960" height="798" />
								{%- endif -%}
							</div>
							{%- for block in section.blocks -%}
								{% if block.type == 'item' %}
									{%- assign name_pin = block.settings.name_pin -%}
									{%- assign product_handle = block.settings.product -%}
									{%- assign top = block.settings.top -%}
									{%- assign left = block.settings.left -%}
									{% if name_pin == "lookbook_1" %}
										<div class="lookbook-card__item" style="top: {{ top }}%; left: {{ left }}%;">
											<div class="lookbook-card__point">
												<div class="lookbook-card__button">
													<button class="lookbook-card__btn" data-toggle="modal" data-target="lookbook-{{ section.id }}-{{ id }}">
														<span>{{ j }}</span>
													</button>
												</div>
											</div>
										</div>
										{%- assign j = j | plus: 1 -%}
										{%- assign id = id | plus: 1 -%}
									{%- endif -%}
								{%- endif -%}
							{%- endfor -%}
						</div>
					</div>
				</div>
				<div class="lookbook__contents-right">
					{%- assign j = 1 -%}
					<div class="wpbingo-lookbook__item">
                        <div class="info">
							{% if section.settings.desc2 != blank %}<div class="desc-lookbook">{{ section.settings.desc2 }}</div>{%- endif -%}
							{% if section.settings.title2 != blank %}<h2 class="title-lookbook">{{ section.settings.title2 }}</h2>{%- endif -%}
							{% if section.settings.button2 != blank %}<a class="button-lookbook" href="{{ section.settings.button_url2 }}">{{ section.settings.button2 }}</a>{%- endif -%}
						</div>
						<div class="lookbook-card">
							<div class="lookbook-image">
								{%- if section.settings.image2 != blank -%}
									{% include 'img-global' with image: section.settings.image2, class: "featured-lookbook__img", effect: "fade-in" %}
								{%- else -%}
									<img class="lazyload fade-in" src="https://placehold.jp/680x618.png" width="680" height="618" />
								{%- endif -%}
							</div>
							{%- for block in section.blocks -%}
								{% if block.type == 'item' %}
									{%- assign name_pin = block.settings.name_pin -%}
									{%- assign product_handle = block.settings.product -%}
									{%- assign top = block.settings.top -%}
									{%- assign left = block.settings.left -%}
									{% if name_pin == "lookbook_2" %}
										<div class="lookbook-card__item" style="top: {{ top }}%; left: {{ left }}%;">
											<div class="lookbook-card__point">
												<div class="lookbook-card__button">
													<button class="lookbook-card__btn" data-toggle="modal" data-target="lookbook-{{ section.id }}-{{ id }}">
														<span>{{ j }}</span>
													</button>
												</div>
											</div>
										</div>
										{%- assign j = j | plus: 1 -%}
										{%- assign id = id | plus: 1 -%}
									{%- endif -%}
								{%- endif -%}
							{%- endfor -%}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{%- assign id = 0 -%}
	{%- for block in section.blocks -%}
		{% if block.type == 'item' %}
			{%- assign name_pin = block.settings.name_pin -%}
			{%- assign product_handle = block.settings.product -%}
			{%- assign alignment = block.settings.display -%}
			{%- render 'lookbook-item', product: all_products[product_handle], alignment: alignment, id: id -%}
			{%- assign id = id | plus: 1 -%}
		{%- endif -%}
	{%- endfor -%}
</section>
