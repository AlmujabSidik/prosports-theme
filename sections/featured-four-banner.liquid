{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign margin = '' -%}
{%- if section.settings.margin != blank -%}
  {%- capture margin -%}margin: {{ section.settings.margin }};{%- endcapture -%}
{%- endif -%}
{%- assign effect = section.settings.effect -%}
{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{%- assign position 	= section.settings.content_position -%}
{%- style -%}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--four-banner{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .wpbingo-section--four-banner{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .wpbingo-section--four-banner{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .wpbingo-section--four-banner{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
    {%- if section.blocks.size > 0 -%}
		{%- for block in section.blocks -%}
			{%- if block.type == 'css' -%}
				#shopify-section-{{ section.id }} .wpbingo-section--four-banner .subtitle-banner{
					font-size: {{ block.settings.font_size_subtitle }}px;
					line-height: {{ block.settings.line_height_subtitle }}px;
					font-weight: {{ block.settings.font_weight_subtitle }};
					letter-spacing:{{ block.settings.letter_spacing_subtitle }}px;
					color:{{ block.settings.color_subtitle }};
					margin:{{ block.settings.margin_subtitle }};
				}
				#shopify-section-{{ section.id }} .wpbingo-section--four-banner .title-banner{
					font-size: {{ block.settings.font_size_title }}px;
					line-height: {{ block.settings.line_height_title }}px;
					font-weight: {{ block.settings.font_weight_title }};
					letter-spacing:{{ block.settings.letter_spacing_title }}px;
					color:{{ block.settings.color_title }};
					margin:{{ block.settings.margin_title }};
				}
				#shopify-section-{{ section.id }} .wpbingo-section--four-banner .bwp-button{
					font-size: {{ block.settings.font_size_button }}px;
					line-height: {{ block.settings.line_height_button }}px;
					color:{{ block.settings.color_button }};
					padding:{{ block.settings.padding_button }};
					background:{{ block.settings.bg_button }};
					font-weight: {{ block.settings.font_weight_button }};
					letter-spacing:{{ block.settings.letter_spacing_button }}px;
					border-radius:{{ block.settings.border_radius }};
					overflow:hidden;
				}
				{%- if block.settings.border -%}
					#shopify-section-{{ section.id }} .wpbingo-section--four-banner .bwp-button:before{
						height:{{ block.settings.border_width }};
						background:{{ block.settings.border_color_button }};
					}
				{%- endif -%}
				#shopify-section-{{ section.id }} .wpbingo-section--four-banner .bwp-button:hover{
					color:{{ block.settings.color_hover_button }};
					background:{{ block.settings.bg_hover_button }};
				}
				#shopify-section-{{ section.id }} .wpbingo-section--four-banner .bwp-button:hover:before{
					background:{{ block.settings.border_color_hover_button }};
				}
				@media(max-width:767px){
					#shopify-section-{{ section.id }} .wpbingo-section--four-banner .subtitle-banner{
						font-size: {{ block.settings.font_size_subtitle_mobi }}px;
						line-height: {{ block.settings.line_height_subtitle_mobi }}px;
						margin:{{ block.settings.margin_subtitle_mobi }};
					}
					#shopify-section-{{ section.id }} .wpbingo-section--four-banner .title-banner{
						font-size: {{ block.settings.font_size_title_mobi }}px;
						line-height: {{ block.settings.line_height_title_mobi }}px;
						margin:{{ block.settings.margin_title_mobi }};
					}
