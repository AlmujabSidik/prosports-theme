						line-height: {{ block.settings.line_height_button_mobi }}px;
						padding:{{ block.settings.padding_button_mobi }};
						border-radius:{{ block.settings.border_radius_mobi }};
					}
				}
			{%- endif -%}
		{%- endfor -%}
	{%- endif -%}
{%- endstyle -%}

<section class="wpbingo-section wpbingo-section--four-banner overflow-hidden">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			<div class="wpbingo-section__content">
                <div class="single-banner">
					<div class="banner-1 featured-banner bwp-effect-{{ section.settings.effect }}">
						<div class="banner-image">
							<div class="image">
								<a href="{{ section.settings.image_url1 }}">
									{%- if section.settings.image1 -%}
										{% include 'img-global' with image: section.settings.image1, class: "featured-banner__img", effect: "fade-in" %}
									{%- else -%}
										<img class="lazyload fade-in" src="https://placehold.jp/863x756.png" width="863" height="756" />
									{%- endif -%}
								</a>
							</div>
						</div>
						<div class="banner-wrapper-infor position-{{ position }}">
							<div class="info">
								<div class="content">
									{%- if section.settings.subtitle1 != blank -%}
										<div class="subtitle-banner">{{ section.settings.subtitle1 }}</div>
									{%- endif -%}
                                    {%- if section.settings.title1 != blank -%}
										<h3 class="title-banner">{{ section.settings.title1 }}</h3>
