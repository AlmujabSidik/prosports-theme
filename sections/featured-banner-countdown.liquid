{{ 'css-section-banner-countdown.css' | asset_url | stylesheet_tag }}
{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign bg_setting = '' -%}
{%- if section.settings.bg_image != blank -%}
	{%- capture bg_setting -%}
		background-position:{{ section.settings.bg_position }};background-size:{{ section.settings.bg_size }};
		{%- if section.settings.bg_fixed != blank -%}
			background-attachment: fixed;
		{%- endif -%}
	{%- endcapture -%}
{%- endif -%}

{%- assign bg_full = '' -%}
{%- if section.settings.bg_image != blank and section.settings.bg_width == 'full' -%}
	{%- capture bg_full -%}
		style="background-image: url('{{ section.settings.bg_image | img_url: ''}}');{{ bg_setting }}"
	{%- endcapture -%}
{%- endif -%}

{%- assign bg_content = '' -%}
{%- if section.settings.bg_image != blank and section.settings.bg_width == 'content' -%}
	{%- capture bg_content -%}
		style="background-image: url('{{ section.settings.bg_image | img_url: ''}}');{{ bg_setting }}"
	{%- endcapture -%}
{%- endif -%}


{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{% assign padding_bg 	= section.settings.padding_bg | split: "|" %}
{%- style -%}
	{%- if section.settings.fullwidth == blank and section.settings.max_width != blank and width_container > 1200 -%}
		@media (max-width: {{ section.settings.max_width }}) and (min-width: 1200px){
			#shopify-section-{{ section.id }} .bwp-container{
				padding-left:30px;
				padding-right:30px;
			}
		}
	{%- endif -%}
	{%- if section.settings.color_bg != blank -%}
		{%- if section.settings.width_bg == 'full' -%}
			#shopify-section-{{ section.id }}{
				background:{{ section.settings.color_bg }};
			}
		{%- elsif section.settings.width_bg == 'container' -%}
			#shopify-section-{{ section.id }} .wpbingo-section__inner{
				background:{{ section.settings.color_bg }};
			}
		{%- endif -%}
	{%- endif -%}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .bwp-widget-countdown{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	#shopify-section-{{ section.id }} .wpbingo-section__inner{
		{%- if padding_bg[0] != blank -%}padding:{{ padding_bg[0] }};{%- endif -%}
	}
	@media (max-width:1200px){
		{%- if margin[1] != blank or padding[1] != blank -%}
			#shopify-section-{{ section.id }} .bwp-widget-countdown{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		{%- endif -%}
		#shopify-section-{{ section.id }} .wpbingo-section__inner{
			{%- if padding_bg[1] != blank -%}padding:{{ padding_bg[1] }};{%- endif -%}
		}
	}
	@media (max-width:991px){
		{%- if margin[2] != blank or padding[2] != blank -%}
			#shopify-section-{{ section.id }} .bwp-widget-countdown{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		{%- endif -%}
		#shopify-section-{{ section.id }} .wpbingo-section__inner{
			{%- if padding_bg[2] != blank -%}padding:{{ padding_bg[2] }};{%- endif -%}
		}
	}
	@media (max-width:767px){
		{%- if margin[3] != blank or padding[3] != blank -%}
			#shopify-section-{{ section.id }} .bwp-widget-countdown{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		{%- endif -%}
		#shopify-section-{{ section.id }} .wpbingo-section__inner{
			{%- if padding_bg[3] != blank -%}padding:{{ padding_bg[3] }};{%- endif -%}
		}
	}
	{%- for block in section.blocks -%}
		{%- case block.type -%}
			{%- when 'title' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .heading-{{forloop.index}}{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					margin:{{ block.settings.margin }};
					color:{{ block.settings.color }};
					text-align:{{ block.settings.align }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .content-title-{{forloop.index}}{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
				}
			{%- when 'title_product' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .product-title a{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					color:{{ block.settings.color }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .product-title {
					margin:{{ block.settings.margin }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .product-title a:hover{
					color:{{ block.settings.color_hover }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .product-price{
					font-size:{{ block.settings.font_size_price }}px;
					line-height:{{ block.settings.line_height_price }}px;
					font-weight:{{ block.settings.font_weight_price }};
					letter-spacing:{{ block.settings.letter_spacing_price }}px;
					margin:{{ block.settings.margin_price }};
					color:{{ block.settings.color_price }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .title-product_price{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
					text-align:{{ block.settings.align }};
				}
			{%- when 'desc' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .desc-{{forloop.index}}{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					margin:{{ block.settings.margin }};
					color:{{ block.settings.color }};
					text-align:{{ block.settings.align }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .content-desc-{{forloop.index}}{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
				}
			{%- when 'button' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}}{
					margin:{{ block.settings.margin }};
					text-align:{{ block.settings.align }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}} a{
					font-size:{{ block.settings.font_size }}px;
					line-height:{{ block.settings.line_height }}px;
					font-weight:{{ block.settings.font_weight }};
					letter-spacing:{{ block.settings.letter_spacing }}px;
					color:{{ block.settings.color }};
					background:{{ block.settings.background }};
					padding:{{ block.settings.padding }};
					overflow:hidden;
					border-radius:{{ block.settings.border_radius }};
					{%- if block.settings.font != blank -%}
						font-family:{{ block.settings.font }};
					{%- endif -%}
				}
				{%- if block.settings.border -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}} a{
						border-width:{{ block.settings.border_width }};
						border-color:{{ block.settings.border_color }};
						border-style:solid;
					}
				{%- endif -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}} a:hover{
					color:{{ block.settings.color_hover }};
					background:{{ block.settings.background_hover }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}} .bwp-button:before{
					background:{{ block.settings.background_hover }};
				}
				{%- if block.settings.border -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}} a:hover{
						border-color:{{ block.settings.border_color_hover }};
					}
				{%- endif -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .content-button-{{forloop.index}}{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
				}
				{%- unless block.settings.icon_title == blank -%}
					#shopify-section-{{ section.id }} .bwp-widget-countdown .button-{{forloop.index}} a i{
						font-size:{{ block.settings.font_icon }}px;
						top:{{ block.settings.margin_icon }}px;
						position:relative;
					}
				{%- endunless -%}
			{%- when 'countdown' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .content-countdown{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
					text-align:{{ block.settings.align }};
					margin:{{ block.settings.margin }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .countdown__item > span:first-child{
					font-size:{{ block.settings.font_countdown_amount }}px;
					font-weight:{{ block.settings.font_weight }};
					color:{{ block.settings.color_countdown_amount }};
					{%- if block.settings.font_amount != blank -%}
						font-family:{{ block.settings.font_amount }};
					{%- endif -%}
					width:{{ block.settings.width_countdown }};
					height:{{ block.settings.height_countdown }};
					line-height:{{ block.settings.height_countdown }};
					border-radius:{{ block.settings.border_radius_countdown }};
					background:{{ block.settings.background }};
					display: inline-block;
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .countdown__item > span:last-child{
					font-size:{{ block.settings.font_countdown_text }}px;
					color:{{ block.settings.color_countdown_text }};
					margin:{{ block.settings.margin_text }};
					display: block;
				}
			{%- when 'image' -%}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .content-image-{{forloop.index}}{
					max-width:{{ block.settings.width }}%;
					flex:0 0 {{ block.settings.width }}%;
					text-align:{{ block.settings.align }};
				}
				#shopify-section-{{ section.id }} .bwp-widget-countdown .image-{{forloop.index}}{
					{%- if block.settings.content_position == 'absolute' -%}
						top: {{ block.settings.top }}%;
						left: {{ block.settings.left }}%;
						transform: translate({{ block.settings.left }}%, {{ block.settings.top }}%);
					{%- endif -%}
				}
		{%- endcase -%}
	{%- endfor -%}
