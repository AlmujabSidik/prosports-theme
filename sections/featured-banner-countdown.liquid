<section class="wpbingo-section bwp-widget-countdown wpbingo-section--{{ section.id }}" {{ bg_full }}>
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner" {{ bg_content }}>
			<div class="wpbingo-section__content">
				<div class="content">
					<div class="image-banner-countdown">
						{%- if section.settings.image -%}
							{% include 'img-global' with image: section.settings.image, class: "image-countdown__img", effect: "fade-in" %}
						{%- else -%}
							<img class="lazyload fade-in" src="https://placehold.jp/359x503.png" width="359" height="503" />
						{%- endif -%}
					</div>
					<div class="content-banner-countdown">
						<div class="content-info-countdown">
							<div class="info">
								{%- for block in section.blocks -%}
									{%- case block.type -%}
										{%- when 'title' -%}
											{%- unless block.settings.title == blank -%}
												<div class="content-info content-title-{{forloop.index}}">
													<h2 class="wpbingo-title heading-{{forloop.index}}">
														{{ block.settings.title }}
													</h2>
												</div>
											{%- endunless -%}
										{%- when 'title_product' -%}
											{% assign product = all_products[block.settings.product] %}
											{%- assign variant 				= product.selected_or_first_available_variant -%}
											{%- assign variant_count 		= product.variants | size -%} 
											<div class="title-product_price">
												<div class="product-title"><a href="{{ product.url }}">{{ product.title }}</a></div>
												<div class="product-card__price">
													<div class="product-group-price">
														{%- if variant_count > 1 -%}
															<div class="product-price product-price--regular">{{ product.compare_at_price | money }}</div>
														{%- endif -%}
														{%- if variant_count > 1 -%}
															<div class="product-price variant-price">{{ variant.price | money }}</div>
														{%- else -%}
															<div class="product-price">{{ product.price | money_without_trailing_zeros }}</div>
														{%- endif -%}
														{%- if product.price_varies == false and variant.unit_price_measurement -%}
															{%- capture unit_price_separator -%}
																<span>/</span><span class="d-none">&nbsp;{{ 'general.accessibility.unit_price_separator' | t }}&nbsp;</span>
															{%- endcapture -%}
															{%- capture unit_price_base_unit -%}
																<span>
																	{%- if variant.unit_price_measurement.reference_value != 1 -%}
																		{{- variant.unit_price_measurement.reference_value -}}
																	{%- endif -%}
																	{{ variant.unit_price_measurement.reference_unit }}
																</span>
															{%- endcapture -%}
															<span class="product-unit-price">
																<span class="d-none">{{ 'products.general.unit_price' | t }}</span>
																<span>{{ variant.unit_price | money }}</span>{{- unit_price_separator -}}{{- unit_price_base_unit -}}
															</span>
														{%- endif -%}
													</div>
												</div>
											</div>
										{%- when 'desc' -%}
											{%- unless block.settings.title == blank -%}
												<div class="content-info content-desc-{{forloop.index}}">
													<div class="wpbingo-desc desc-{{forloop.index}}">
														{{ block.settings.title }}
													</div>
												</div>
											{%- endunless -%}
										{%- when 'button' -%}
											{%- unless block.settings.title == blank -%}
												<div class="content-info content-button-{{forloop.index}}">
													<div class="wpbingo-button  button-{{forloop.index}}" >
