{%- if section.settings.show -%}
<div class="footer-top">
	<div class="container">
		<div class="footer-top__inner row">
		{%- if section.blocks.size > 0 -%}
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'menu' -%}
						<div class="footer-index-{{forloop.index}} footer-menu aligin-{{ block.settings.align }} aligin_mobi-{{ block.settings.align_mobi }}">
							{%- assign footer_menu = block.settings.footer_link_list -%}
							{% include 'footer-menu' %}
						</div>
					{%- when 'copyright' -%}
						{%- if block.settings.show_copyright -%}
							 <div class="footer-index-{{forloop.index}} footer-copyright aligin-{{ block.settings.align }} aligin_mobi-{{ block.settings.align_mobi }}">{{ block.settings.copyright }}</div>
						{%- else -%}
							<div class="footer-index-{{forloop.index}} footer-copyright aligin-{{ block.settings.align }} aligin_mobi-{{ block.settings.align_mobi }}">&copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: routes.root_url }}. {{ powered_by_link }}</div>
						{%- endif -%}
					{%- when 'paymet' -%}
						{%- assign payment_image = block.settings.payment_image -%}
						<div class="footer-index-{{forloop.index}} payment-image aligin-{{ block.settings.align }} aligin_mobi-{{ block.settings.align_mobi }}">
							{%- if payment_image -%}
								<img class="payment-image__img img-fluid" src="{{ payment_image | img_url: 'master' }}" width="{{ payment_image.width }}" height="{{ payment_image.height }}" alt="{{ payment_image.alt | escape }}"/>
							{%- else -%}
								<img src="https://placehold.jp/150x50.png" width="150" height="50" />
							{%- endif -%}
						</div>
					{%- when 'social' -%}
						<div class="footer-index-{{forloop.index}} footer-social aligin-{{ block.settings.align }} aligin_mobi-{{ block.settings.align_mobi }}">
							{%- if block.settings.social != blank -%}
								{% include 'social-media' %}
							{%- endif -%}
						</div>
					{%- when 'newsletter' -%}
						{%- if block.settings.title != blank -%}
							<div class="content-toggle  item-{{forloop.index}}">
								<div class="footer-block">
									<div class="footer-block__content">
										<div class="footer-block__content-left">
											<i class="icon-envelope"></i>
											<div class="content">
												<h2 class="title-footer title-{{forloop.index}}">{{ block.settings.title }}</h2>
												<p class="description-footer description-{{forloop.index}}">{{ block.settings.description }}</p>
											</div>
										</div>
										<div class="footer-block__content-right">
											{%- if block.settings.mailchimp -%}
												{%- assign mailchimp_action = block.settings.form_action | replace: '/post?', '/post-json?' | append: '&amp;c=?' -%}
												<form class="js-wpbingo-newsletter" action="{{ mailchimp_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank">
													<div class="newsletter-form__wrap">
														<input class="js-input-newsletter form-control newsletter-form__input" type="email" name="EMAIL"
															value="{% if customer %}{{ customer.email }}{% endif %}"
															placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" required />
														<button class="btn newsletter-form__submit" type="submit">
															<span>Subscribe</span>
														</button>
													</div>
												</form>
											{%- else -%}
												{% form 'customer' %}
													{{ form.errors | default_errors }}
													{%- if form.posted_successfully? -%}
														<div class="alert alert-success">{{ 'general.newsletter_form.newsletter_confirmation' | t }}</div>
													{%- else -%}
														<input type="hidden" name="contact[tags]" value="newsletter">
														<div class="newsletter-form__wrap">
															<input value="{% if customer %}{{ customer.email }}{% endif %}"
																placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}"
																name="contact[email]" class="form-control newsletter-form__input" type="email" 
																autocorrect="off" autocapitalize="off"/>
															<button class="btn newsletter-form__submit" type="submit">
																<span>Subscribe</span>
															</button>
														</div>
													{%- endif -%}
												{% endform %}
											{%- endif -%}
										</div>
									</div>
								</div>
							</div>
						{%- else -%}
							<div class="content-item  item-{{forloop.index}}">
								<div class="footer-block">
									<div class="footer-block__content">
										{%- if block.settings.mailchimp -%}
											{%- assign mailchimp_action = block.settings.form_action | replace: '/post?', '/post-json?' | append: '&amp;c=?' -%}
											<form class="js-wpbingo-newsletter" action="{{ mailchimp_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank">
												<div class="newsletter-form__wrap">
													<input class="js-input-newsletter form-control newsletter-form__input" type="email" name="EMAIL"
														value="{% if customer %}{{ customer.email }}{% endif %}"
														placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" required />
													<button class="btn newsletter-form__submit" type="submit">
														<span>Subscribe</span>
													</button>
												</div>
											</form>
										{%- else -%}
											{% form 'customer' %}
												{{ form.errors | default_errors }}
												{%- if form.posted_successfully? -%}
													<div class="alert alert-success">{{ 'general.newsletter_form.newsletter_confirmation' | t }}</div>
												{%- else -%}
													<input type="hidden" name="contact[tags]" value="newsletter">
													<div class="newsletter-form__wrap">
														<input value="{% if customer %}{{ customer.email }}{% endif %}"
															placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}"
															name="contact[email]" class="form-control newsletter-form__input" type="email" 
															autocorrect="off" autocapitalize="off"/>
														<button class="btn newsletter-form__submit" type="submit">
															<span>Subscribe</span>
														</button>
													</div>
												{%- endif -%}
											{% endform %}
										{%- endif -%}
									</div>
								</div>
							</div>
						{%- endif -%}
				{%- endcase -%}
			{%- endfor -%}
		{%- endif -%}
		</div>
	</div>
</div>
{%- endif -%}
