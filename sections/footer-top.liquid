{% assign padding 	= section.settings.padding | split: "|" %}
{% assign bg 		= section.settings.bg_color %}
{%- style -%}
	{%- if padding[0] != blank -%}
		.footer-top{
			padding:{{ padding[0] }};
			background:{{bg}};
			{%- if section.settings.border -%}
				border-width: {{ section.settings.border_width }};
				border-color: {{ section.settings.border_color }};
				border-style:solid;
			{%- endif -%}
		}
	{%- endif -%}
	{%- if section.blocks.size > 0 -%}
		{%- for block in section.blocks -%}
			{%- case block.type -%}
				{%- when 'menu' -%}
					.footer-top .footer-index-{{forloop.index}}{
						color:{{ block.settings.color }};
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
					.footer-top .footer-index-{{forloop.index}} a{
						color:{{ block.settings.color }};
					}
					.footer-top .footer-index-{{forloop.index}} a:hover{
						color:{{ block.settings.color_hover }};
					}
				{%- when 'copyright' -%}
					.footer-top .footer-index-{{forloop.index}}{
						color:{{ block.settings.color }};
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
				{%- when 'paymet' -%}
					.footer-top .footer-index-{{forloop.index}}{
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
					{%- if block.settings.payment_image != blank -%}
						.footer-top .footer-index-{{forloop.index}} .payment-image__img{
							width:{{ block.settings.size_logo }}px;
						}
					{%- endif -%}
				{%- when 'social' -%}
					.footer-top .footer-index-{{forloop.index}}{
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
					.footer-top .social-icons li a{
						color:{{ block.settings.color_social }};
						fill:{{ block.settings.color_social }};
						border-color:{{ block.settings.color_social }}33;
					}
				{%- when 'newsletter' -%}
					.footer-top .item-{{forloop.index}}{
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
					{%- if block.settings.title != blank -%}
						.footer-top .title-{{forloop.index}}{
							font-size:{{ block.settings.font_size }}px;
							line-height:{{ block.settings.line_height }}px;
							font-weight:{{ block.settings.font_weight }};
							letter-spacing:{{ block.settings.letter_spacing }}px;
							margin:{{ block.settings.margin }};
							color:{{ block.settings.color }};
							{%- if block.settings.font != blank -%}
								font-family:{{ block.settings.font }};
							{%- endif -%}
						}
					{%- endif -%}
					{%- if block.settings.description != blank -%}
						.footer-top .description-{{forloop.index}}{
							font-size:{{ block.settings.font_size_description }}px;
							line-height:{{ block.settings.line_height_description }}px;
							font-weight:{{ block.settings.font_weight_description }};
							letter-spacing:{{ block.settings.letter_spacing_description }}px;
							margin:{{ block.settings.margin_description }};
							color:{{ block.settings.color_description }};
							{%- if block.settings.font_description != blank -%}
								font-family:{{ block.settings.font_description }};
							{%- endif -%}
						}
					{%- endif -%}
			{%- endcase -%}
		{%- endfor -%}
		{%- if padding[1] != blank -%}
			@media (max-width:1199px){
				.footer-top{
					padding:{{ padding[1] }};
				}
			}
		{%- endif -%}
		@media (max-width:991px){
